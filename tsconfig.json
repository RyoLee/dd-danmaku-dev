{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "module": "esnext",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "outDir": "dist",
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
