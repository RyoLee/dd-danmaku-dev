{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["node","jest"],
    "outDir": "dist",
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["dist"]
}
